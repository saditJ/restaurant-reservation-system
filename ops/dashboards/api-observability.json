{
  "uid": "reserve-api-observability",
  "title": "Reserve API Observability",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (RPS)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_request_duration_seconds_count[5m]))",
          "legendFormat": "all routes"
        },
        {
          "refId": "B",
          "expr": "sum by (route)(rate(http_request_duration_seconds_count[5m]))",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "p95 Latency (seconds)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum by (le)(rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Rate (4xx vs 5xx)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"4..\"}[5m]))",
          "legendFormat": "4xx"
        },
        {
          "refId": "B",
          "expr": "sum(rate(http_request_duration_seconds_count{status_code=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "id": 4,
      "title": "Rate Limit Activity",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rate_limit_allows_total[5m]))",
          "legendFormat": "allows"
        },
        {
          "refId": "B",
          "expr": "sum(rate(rate_limit_drops_total[5m]))",
          "legendFormat": "drops"
        }
      ]
    },
    {
      "id": 5,
      "title": "Rate Limit Drops by Route",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (route)(rate(rate_limit_drops_total[5m]))",
          "legendFormat": "{{route}}"
        }
      ]
    },
    {
      "id": 6,
      "title": "Idempotency Reuse (per second)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(idempotency_hits_total[5m]))",
          "legendFormat": "reuse"
        }
      ]
    }
  ],
  "templating": { "list": [] },
  "annotations": { "list": [] }
}
